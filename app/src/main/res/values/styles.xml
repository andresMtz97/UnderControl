<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ImageButtonEdit" parent="Widget.AppCompat.ImageButton">
        <item name="android:backgroundTint">@android:color/holo_blue_dark</item>
        <item name="android:contentDescription">@string/ib_edit_description</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@drawable/ic_edit</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="ImageButtonDelete" parent="Widget.AppCompat.ImageButton">
        <item name="android:backgroundTint">@android:color/holo_red_dark</item>
        <item name="android:contentDescription">@string/ib_delete_description</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@drawable/ic_trash</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="TextViewForm" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/gray_500</item>
        <item name="android:textSize">11sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EditTextForm" parent="Widget.AppCompat.EditText">
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray_500</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="ButtonSubmit" parent="TextAppearance.AppCompat.Button">
<!--        <item name="android:backgroundTint">@color/violet_700</item>-->
        <item name="background">@drawable/selector_btn_enabled_property</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
